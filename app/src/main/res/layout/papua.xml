<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/drawer"
    tools:context=".sumatera">

    <RelativeLayout
        android:id="@+id/header1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:layout_alignParentBottom="true">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp">

                <ImageButton
                    android:id="@+id/imageButton1"
                    android:layout_width="171dp"
                    android:layout_height="171dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ppap1"
                    android:layout_marginTop="7dp"
                    android:background="@null"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:onClick="satu4"/>
                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="171dp"
                    android:layout_height="171dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ppap2"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="179dp"
                    android:background="@null"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:onClick="dua4"/>
                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="171dp"
                    android:layout_height="171dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ppap3"
                    android:layout_marginTop="185dp"
                    android:background="@null"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:onClick="tiga4"/>
                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="171dp"
                    android:layout_height="171dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ppap4"
                    android:layout_marginTop="185dp"
                    android:layout_marginLeft="179dp"
                    android:background="@null"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:onClick="empat4"/>
                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="171dp"
                    android:layout_height="171dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ppap5"
                    android:layout_marginTop="363dp"
                    android:background="@null"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:onClick="lima4"/>
                <ImageButton
                    android:id="@+id/imageButton6"
                    android:layout_width="171dp"
                    android:layout_height="171dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ppap6"
                    android:layout_marginTop="363dp"
                    android:layout_marginLeft="179dp"
                    android:background="@null"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:onClick="enam4"/>

            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/icon_navigation2"
        app:itemTextColor="@color/colortextnavbar"
        app:itemIconTint="@color/colortextnavbar"
        android:theme="@style/NavigationView"/>

</android.support.v4.widget.DrawerLayout>